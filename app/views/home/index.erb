<!--기본 메인 화면, 부트스트랩을 이용하여 값을 받아서 넘겨준다. -->
<div class = "container">
    <h1 style = "text-align : center">Post</h1>
    <form action="/write" method = "POST"> <!--submit을 누르면 POST방식으로 값을 전달-->
      <div class="form-group">
        <label for="exampleInputEmail1">제목을 입력하세요</label>
        <input type="text" name = "title" class="form-control" id="exampleInputEmail1" placeholder="제목을 입력하세요">
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">내용을 입력하세요</label>
        <textarea type="text" name = "content" rows = "5" class="form-control" id="exampleInputPassword1" placeholder="내용을 입력하세요"></textarea>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
</div>